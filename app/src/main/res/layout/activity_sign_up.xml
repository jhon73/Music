<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sign_up_bg" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_bg_layer_sign_up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26sdp"
                android:gravity="center_vertical"
                android:padding="@dimen/_4sdp">

                <RelativeLayout
                android:id="@+id/activity_sign_up_iv_back"
                android:layout_marginTop="@dimen/_minus8sdp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_33sdp"
                android:gravity="center_vertical">

                <ImageView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/ic_back_main" />
                </RelativeLayout>

                <!--<ImageView-->
                    <!--android:id="@+id/activity_sign_up_iv_back"-->
                    <!--android:layout_width="@dimen/_21sdp"-->
                    <!--android:layout_height="@dimen/_21sdp"-->
                    <!--android:src="@drawable/ic_back_main" />-->

                <com.musika.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/create_account"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    app:font_type="@string/SFUI_Display_Regular" />
            </RelativeLayout>

            <com.musika.widget.LockableScrollView
                android:id="@+id/activity_sign_up_sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_28sdp"
                        android:layout_marginRight="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_71sdp"
                            android:background="@drawable/ic_rect_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <com.musika.widget.CustomEditText
                                    android:id="@+id/act_sign_up_ed_fname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:hint="@string/first_name"
                                    android:nextFocusForward="@+id/act_sign_up_ed_lname"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/hintText"
                                    android:textCursorDrawable="@drawable/cursor_drawable"
                                    android:textSize="@dimen/_13sdp"
                                    app:font_type="@string/SFUI_Display_Regular" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/hintText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <com.musika.widget.CustomEditText
                                    android:id="@+id/act_sign_up_ed_lname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_weight="1"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:hint="@string/last_name"
                                    android:inputType="text"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/hintText"
                                    android:textCursorDrawable="@drawable/cursor_drawable"
                                    android:textSize="@dimen/_13sdp"
                                    app:font_type="@string/SFUI_Display_Regular" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_107sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/ic_rect_bg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_email"
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:src="@drawable/ic_email" />


                                <com.musika.widget.CustomEditText
                                    android:id="@+id/act_sign_up_ed_mail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_toLeftOf="@+id/act_sign_up_rl_email"
                                    android:layout_toRightOf="@+id/iv_email"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:hint="@string/email"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusForward="@+id/act_sign_up_ed_mobile"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/hintText"
                                    android:textCursorDrawable="@drawable/cursor_drawable"
                                    android:textSize="@dimen/_13sdp"
                                    app:font_type="@string/SFUI_Display_Regular" />

                                <RelativeLayout
                                    android:id="@+id/act_sign_up_rl_email"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true">

                                    <com.wang.avi.AVLoadingIndicatorView
                                        android:id="@+id/act_sign_reg_progress"
                                        style="@style/AVLoadingIndicatorView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:visibility="gone"
                                        app:indicatorColor="@color/white"
                                        app:indicatorName="BallPulseIndicator" />

                                    <ImageView
                                        android:id="@+id/act_sign_reg_success"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_check"
                                        android:visibility="gone" />

                                    <ImageView
                                        android:id="@+id/act_sign_reg_fail"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_close"
                                        android:visibility="gone" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/hintText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:src="@drawable/ic_phone" />

                                <com.musika.widget.CustomEditText
                                    android:id="@+id/act_sign_up_ed_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:hint="@string/phone_number"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/hintText"
                                    android:textCursorDrawable="@drawable/cursor_drawable"
                                    android:textSize="@dimen/_13sdp"
                                    app:font_type="@string/SFUI_Display_Regular" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/hintText" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:src="@drawable/ic_password" />

                                <com.musika.widget.CustomEditText
                                    android:id="@+id/act_sign_up_ed_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:hint="@string/password"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/hintText"
                                    android:textCursorDrawable="@drawable/cursor_drawable"
                                    android:textSize="@dimen/_13sdp"
                                    app:font_type="@string/SFUI_Display_Regular" />

                                <ImageView
                                    android:id="@+id/act_sign_up_password"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:src="@drawable/ic_hidden_eye"
                                    android:tint="@color/white"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"

                            android:orientation="vertical">


                            <RelativeLayout
                                android:id="@+id/act_sign_up_ll_age"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/ic_rect_bg"
                                android:gravity="center"
                                android:orientation="vertical">


                                <com.musika.widget.CustomTextView
                                    android:id="@+id/act_sign_up_tv_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/hintText"
                                    android:textSize="@dimen/_13sdp"
                                    app:font_type="@string/SFUI_Display_Regular" />

                                <com.musika.widget.CustomEditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:hint="@string/age"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/hintText"
                                    android:textCursorDrawable="@drawable/cursor_drawable"
                                    android:textSize="@dimen/_13sdp"
                                    app:font_type="@string/SFUI_Display_Regular" />


                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/hintText" />


                            <RelativeLayout
                                android:id="@+id/act_sign_up_rl_age"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:background="@drawable/ic_rect_bg"
                                android:visibility="visible">


                                <com.example.yudiz.wheel.WheelView
                                    android:id="@+id/act_sign_up_wheel_age"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <View
                                    android:id="@+id/act_sign_up_wheel_age_view"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_centerInParent="true" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/hintText" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_37sdp"
                                android:background="@drawable/ic_rect_bg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/act_sign_up_ll_male"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/_4sdp"
                                    android:layout_weight="0.5"
                                    android:gravity="center">


                                    <ImageView
                                        android:id="@+id/act_sign_up_iv_male"
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_13sdp"
                                        android:src="@drawable/ic_tick"
                                        android:tint="@color/hintText" />

                                    <com.musika.widget.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:text="@string/male"
                                        android:textColor="@color/hintText"
                                        android:textSize="@dimen/_13sdp"
                                        app:font_type="@string/SFUI_Display_Medium" />

                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/hintText" />

                                <LinearLayout
                                    android:id="@+id/act_sign_up_ll_female"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/act_sign_up_iv_female"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:src="@drawable/ic_tick"
                                        android:tint="@color/hintText"
                                        android:visibility="gone" />

                                    <com.musika.widget.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:text="@string/female"
                                        android:textColor="@color/hintText"
                                        android:textSize="@dimen/_13sdp"
                                        app:font_type="@string/SFUI_Display_Medium" />


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <com.musika.widget.CustomTextView
                            android:id="@+id/act_tv_sign_up"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_27sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:background="@drawable/round_corner_red_bg_normal"
                            android:gravity="center"
                            android:text="@string/sign_up"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:transitionName="@string/transition_lets_start"
                            app:font_type="@string/SFUI_Display_Regular"
                            app:rd_cornerRadius="@dimen/_18sdp"
                            app:rd_enable="true"
                            app:rd_maskType="rectangle"
                            app:rd_maxRippleRadius="@dimen/_18sdp"
                            app:rd_padding="@dimen/_18sdp"
                            app:rd_style="@style/Material.Drawable.Ripple.Touch" />


                    </LinearLayout>
                </LinearLayout>
            </com.musika.widget.LockableScrollView>
        </LinearLayout>

    </RelativeLayout>
</layout>